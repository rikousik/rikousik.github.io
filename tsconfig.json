{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext", // Changed from NodeNext
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "types": [
      "node"
    ],
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "incremental": true,
    "allowJs": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}